{
  "name": "copilot-chat-secretary",
  "displayName": "Copilot Chat Secretary",
  "description": "Real-time monitoring and status tracking for VS Code Copilot chat sessions",
  "version": "0.8.0",
  "publisher": "dealenx",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dealenx/vscode-copilot-chat-secretary"
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "rimraf out && node esbuild.js --production",
    "watch": "rimraf out && node esbuild.js --watch",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "publish": "vsce publish",
    "prepackage": "pnpm run build"
  },
  "keywords": [
    "copilot",
    "chat",
    "monitor",
    "status",
    "ai",
    "assistant"
  ],
  "activationEvents": [
    "onView:copilotChatSecretaryView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotChatSecretary.refreshStatus",
        "title": "Refresh Chat Status",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotChatSecretary.showLogs",
        "title": "Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "copilotChatSecretary.clearHistory",
        "title": "Clear Dialog History",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatSecretary.refreshDialogs",
        "title": "Refresh Dialogs",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotChatSecretary.copyChatJson",
        "title": "Copy Chat JSON",
        "icon": "$(clippy)"
      },
      {
        "command": "copilotChatSecretary.copyRequestMessage",
        "title": "Copy Message",
        "icon": "$(copy)"
      },
      {
        "command": "copilotChatSecretary.copyAIResponse",
        "title": "Copy AI Response",
        "icon": "$(copy)"
      },
      {
        "command": "copilotChatSecretary.api.getStatus",
        "title": "API: Get Chat Status"
      },
      {
        "command": "copilotChatSecretary.api.getCurrentDialog",
        "title": "API: Get Current Dialog"
      },
      {
        "command": "copilotChatSecretary.api.getDialogHistory",
        "title": "API: Get Dialog History"
      },
      {
        "command": "copilotChatSecretary.api.getSession",
        "title": "API: Get Session"
      }
    ],
    "languageModelTools": [
      {
        "name": "chat_secretary_get_first_request",
        "displayName": "Get First Request",
        "toolReferenceName": "getFirstRequest",
        "userDescription": "Retrieves the first user request from a Copilot Chat dialog",
        "modelDescription": "Use this tool to retrieve the first user request from a Copilot Chat dialog. This is useful when context has been compressed and you need to recall the original question. Parameters: sessionId (optional) - if not provided, uses current active dialog. Returns JSON with success, sessionId, firstRequest (first 80 chars), timestamp, and requestsCount.",
        "icon": "$(comment-discussion)",
        "tags": [
          "chat",
          "context",
          "history"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "sessionId": {
              "type": "string",
              "description": "Optional: Dialog session ID. If omitted, uses current active dialog."
            }
          }
        }
      },
      {
        "name": "chat_secretary_get_request",
        "displayName": "Get Request by Index",
        "toolReferenceName": "getRequest",
        "userDescription": "Retrieves a specific user request from a dialog by its position/index",
        "modelDescription": "Use this tool to retrieve a specific user request from a Copilot Chat dialog by its position. Index is 1-based (1 = first request, 2 = second request, etc.). Parameters: index (required) - position of the request (1-based), sessionId (optional) - if not provided, uses current active dialog. Returns JSON with success, sessionId, request text, index, timestamp, and totalRequests.",
        "icon": "$(comment)",
        "tags": [
          "chat",
          "context",
          "history"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "index": {
              "type": "number",
              "description": "Position of the request to retrieve (1-based index)"
            },
            "sessionId": {
              "type": "string",
              "description": "Optional: Dialog session ID. If omitted, uses current active dialog."
            }
          },
          "required": [
            "index"
          ]
        }
      }
    ],
    "views": {
      "copilotChatSecretaryContainer": [
        {
          "id": "copilotChatSecretaryView",
          "name": "Chat Monitor",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "copilotChatSecretaryRequestsView",
          "name": "Opened Dialog",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "copilotChatSecretaryProcessedDialogsView",
          "name": "Dialogs",
          "icon": "$(history)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotChatSecretaryContainer",
          "title": "Copilot Chat Secretary",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Chat Secretary",
      "properties": {
        "copilotChatSecretary.checkInterval": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 30,
          "description": "Chat status check interval in seconds"
        },
        "copilotChatSecretary.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging to Output panel"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "copilotChatSecretary.refreshStatus",
          "when": "view == copilotChatSecretaryView",
          "group": "navigation@1"
        },
        {
          "command": "copilotChatSecretary.refreshDialogs",
          "when": "view == copilotChatSecretaryProcessedDialogsView",
          "group": "navigation@1"
        },
        {
          "command": "copilotChatSecretary.clearHistory",
          "when": "view == copilotChatSecretaryProcessedDialogsView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "copilotChatSecretary.copyChatJson",
          "when": "view == copilotChatSecretaryProcessedDialogsView && viewItem == processedDialog",
          "group": "inline"
        },
        {
          "command": "copilotChatSecretary.copyRequestMessage",
          "when": "view == copilotChatSecretaryRequestsView && viewItem == conversationTurn",
          "group": "inline"
        },
        {
          "command": "copilotChatSecretary.copyRequestMessage",
          "when": "view == copilotChatSecretaryProcessedDialogsView && viewItem == dialogRequestItem",
          "group": "inline"
        },
        {
          "command": "copilotChatSecretary.copyAIResponse",
          "when": "view == copilotChatSecretaryRequestsView && viewItem == aiResponse",
          "group": "inline"
        },
        {
          "command": "copilotChatSecretary.copyAIResponse",
          "when": "view == copilotChatSecretaryProcessedDialogsView && viewItem == responseItem",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "copilot-chat-analyzer": "file:./copilot-chat-analyzer",
    "graphql-ws": "^6.0.6"
  }
}
